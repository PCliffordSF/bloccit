 <div class="row">
   <div class="col-md-8">
     <div class="media">
       <br />

       <% avatar_url = @user.avatar_url(128) %>
       <% if avatar_url %>
         <div class="media-left">

           <%= image_tag avatar_url, class: 'media-object' %>
         </div>
       <% end %>
       <div class="media-body">
       <% if has_no_posts? %>
          <h2 class="media-heading"><%= @user.name %> has not submitted any posts yet.</h2>

       <% else %>
        <h2 class="media-heading">Welcome <%= @user.name %>.</h2>
        <small>
           <%= pluralize(@user.posts.count, 'post') %>,
           <%= pluralize(@user.comments.count, 'comment') %>
       </small>
       <% end %>
       </div>
     </div>
   </div>
 </div>
 
 <% if !has_no_posts? %>
 
 <h2>Posts</h2>
 <%= render @user.posts %>

 <h2>Favortited Post</h2>
 <%= render @user.favorites %>

 <% if !has_no_comments? %>
 <h2>Comments</h2>
 <%= render @user.comments %>
 <% else %>
 <h2 class="media-heading"><%= @user.name %> has not commented on any posts yet.</h2>
 <% end %>
 
 <% end %>