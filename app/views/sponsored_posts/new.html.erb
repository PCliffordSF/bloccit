 <h1>New Sponsored Post</h1>
 
 <div class="row">
   <div class="col-md-4">

   <div class="col-md-8">
     <%= form_for [@topic, @sponsored_post] do |sp| %>
       <div class="form-group">

         <%= sp.label :title %>

         <%= sp.text_field :title, class: 'form-control', placeholder: "Enter sponsored post title" %>
       </div>
       <div class="form-group">
         <%= sp.label :body %>
         <%= sp.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter spnsored post body" %>
       </div>
       <div class="form-group">
         <%= sp.label :price %>
         <%= sp.number_field :body, class: 'form-control', placeholder: "Enter the price" %>
       </div>
       <div class="form-group">

         <%= sp.submit "Save", class: 'btn btn-success' %>
       </div>
     <% end %>
   </div>
 </div>
